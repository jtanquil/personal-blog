extends main.pug 

block title
  title="Personal Blog - Home"

block content
  section(class="header")
    h1(class="title")="Personal Blog"

    p(class="admin-new")
      a(href="/new")="+Add"

  ul
  - for (let blogEntry of locals.entries) {
    li(class="blog-entry")
      p(class="title")
        a(href=`/article/${blogEntry.id}`)=`${blogEntry.title}`
      p(class="edit")
        a(href=`/edit/${blogEntry.id}`)="Edit"
      form(method="post" action=`/delete/${blogEntry.id}` class="delete")
        input(type="submit" value="Delete")
  - }